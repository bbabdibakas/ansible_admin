# Порт на котором запуститься приложение
APP_PORT=80
APP_ENV=development

# Пользователь
APP_USERNAME='{{ APP_USERNAME }}'
APP_PASSWORD='{{ APP_PASSWORD }}'

# Настройки redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Показывать QR в консоле
SHOW_QR_CODE_IN_CONSOLE=true

# Вебхуки: новое сообщение
WEBHOOK_NEW_MESSAGE_URL='http://abs/api/webhook/black-app/new-message'
# Вебхуки: обновление статуса сообщения
WEBHOOK_MESSAGE_STATUS_CHANGE_URL='http://abs/api/webhook/black-app/status-change'

# Proxy настройки для BlackApp
USE_PROXY=false
PUPPETEER_PROXY_SERVER={{ PUPPETEER_PROXY_SERVER }}
PROXY_USERNAME={{ PROXY_USERNAME }}
PROXY_PASSWORD={{ PROXY_PASSWORD }}